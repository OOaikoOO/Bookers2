<h2>Follower Users</h2>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.profile_image, size: "50x50" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
        <% end %>
      <% else %>
        <td>ユーザーはいません</td>
      <% end %>
        </tr>
    </tbody>
  </table>
</div>