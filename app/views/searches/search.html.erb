<h2>Users search for "<%= @content %>"</h2>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% if @model == 'user' %>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.profile_image, size: "50x50" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
        <% end %>
      <% elsif @model == 'book' %>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.profile_image, size: "50x50" %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
        <% end %>
      <% end %>
        </tr>
    </tbody>
  </table>
</div>