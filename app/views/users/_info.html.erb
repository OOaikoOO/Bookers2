<h2>User info</h2>
<%= image_tag user.get_profile_image(100, 100) %>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
        <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
    <span><i class="fas fa-user-cog"></i></span>
  <% end %>
</div>