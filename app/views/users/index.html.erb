<h1>ユーザーの一覧</h1>
<%= render 'info', users: @users %>
      
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
          </tr>
    </thead>
    <tbody>
      <tr>
        <% if @book.present? %>
          <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
          <td><%= @book.user.name %></td>
          <td><%= link_to "Show", user_path(@book.user) %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
