<%= @book_comments.each do |book_comment| %>
  <div>
    <p><%= image_tag book_comment.user.get_profile_image(50,50) %></p>
    <%= link_to book.user.name, user_path(book_comment.user) %>
    <%= button_to "Destroy", book_comment_path(book_comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
  </div>
<% end %>

<%= form_with model: [@book, @book_comment] do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "送信" %>
  </div>
<% end %>