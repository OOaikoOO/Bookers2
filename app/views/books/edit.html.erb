<h2>本の編集</h2>
<div class="container">
  <div class="row">
    <div class="ol-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
        <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :title, "Title", class: "control-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :opinion, "Opinion", class: "control-label" %>
            <%= f.text_area :opinion, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit class: "btn btn-success" %>
          </div>
        <% end %>
    </div>
  </div>
</div>